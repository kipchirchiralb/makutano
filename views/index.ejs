<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Makutano Social App</title>
  </head>
  <body>
    <h1>Makutano App</h1>
    
    <% if(user){ %>
      <h2>Welcome, <%= user.fullname %></h2>
    <% }else{ %>
      <h2>Welcome, Guest</h2>
      <a href="/login">Login</a>
    <% } %>
    <a href="/newuser">Add new user</a>
    <a href="/newclient">Add new cLient</a>

    <h2>What's on your mind</h2>
    <form action="http://localhost:3003/newpost" method="post">
      <textarea name="content" id="content" cols="30" rows="10"></textarea>
      <br />
      <button type="submit">Post</button>
    </form>
    <h2>Recent posts</h2>
    <hr />
    <section class="posts">
      <% posts.forEach(post=>{ %>

      <article>
        <p><%= post.content %></p>
        <p>
          Posted by: <%= post.postowner %> <br />
          Posted on <%= post.createdat.toLocaleDateString() %>
        </p>
      </article>
      <hr />
      <% }) %>
    </section>
  </body>
</html>
